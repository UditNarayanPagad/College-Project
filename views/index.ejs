<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CS Gallery</title>
    <link rel="stylesheet" href="style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>

  <body>
    <div class="background"></div>
    <div class="main">
      <div class="moreDiv" style="display: none">
        <i class="fa-solid fa-xmark fa-lg close"></i>
        <% if (!tok) {%>
        <div class="link"><a href="/signUp">Sign up</a></div>
        <div class="link"><a href="/signIn">Sign in</a></div>
        <% } else { %>
        <div class="link"><a href="/signOut">Sign out</a></div>
        <% } %>

        <div class="link"><a href="/upload">Upload</a></div>
        <div class="link"><a href="#">About us</a></div>
      </div>
      <header>
        <div class="nav">
          <div class="log">
            <img src="/images/MLogo.jpg" alt="logo" />
          </div>
          <div class="dept">
            <h1>C.S , SDVM</h1>
          </div>
          <div class="choose">
            <% if (!tok) {%>
            <div class="link"><a href="/signUp">Sign up</a></div>
            <div class="link"><a href="/signIn">Sign in</a></div>
            <% } else { %>
            <div class="link"><a href="/signOut">Sign out</a></div>
            <% } %>

            <div class="link"><a href="/upload">Upload</a></div>
            <div class="link"><a href="#">About us</a></div>
          </div>
          <span><i class="fa-solid fa-bars fa-lg more"></i></span>
        </div>
      </header>

      <div class="container">
        <% if (messages.success) { %>
        <div class="alert alert-success"><%= messages.success %></div>
        <% } %> <% if (messages.error) { %>
        <div class="alert alert-danger"><%= messages.error %></div>
        <% } %> <% let colors=["purpl","yelw", "orng" , "sky" ] %> <% if
        (posts.length !==0) { %> <%posts.reverse().forEach((post, indx)=> { %>
        <div class="card glow <%= colors[indx % colors.length] %>">
          <% if (messages.info) { %>
          <div class=""><%= messages.info %></div>
          <% } %>
          <h3><%= post.eventName %></h3>
          <div class="cardImage"><img src="<%= post.photo.path %>" /></div>
          <h4><%= post.details %></h4>
          <h5>
            created on: <%= new Date(post.createdDate).toLocaleString('en-IN', {
            timeZone: 'Asia/Kolkata' }).replace(',', '' ) %>
          </h5>

          <div class="down">
            <a href="<%= post._id %>">See Details</a>
            <a href="<%= post._id %>/upload">Add more to it</a>
          </div>
        </div>
        <% }) %> <% } else { %>
        <h1>No images found</h1>
        <% } %>
      </div>
    </div>
    <script>
      let more = document.querySelector(".more");
      let closebtn = document.querySelector(".close");
      let div = document.querySelector(".moreDiv");
      more.addEventListener("click", () => {
        div.style.display = "flex";
        more.style.display = "none";
        closebtn.style.display = "block";
      });
      closebtn.addEventListener("click", () => {
        div.style.display = "none";
        closebtn.style.display = "none";
        more.style.display = "block";
      });
      setTimeout(function () {
        const alerts = document.querySelectorAll(".alert");
        alerts.forEach((alert) => {
          alert.style.display = "none";
        });
      }, 5000);
    </script>
    <!-- <script src="dot.js"></script> -->
  </body>
</html>
